FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies
RUN npm install --include=dev

# Verify critical dependencies are installed
RUN npm list @vitejs/plugin-react @tailwindcss/vite || npm install @vitejs/plugin-react @tailwindcss/vite --save-dev

# Copy source code
COPY . .

EXPOSE 5173
CMD ["npm", "run", "dev"]